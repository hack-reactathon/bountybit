.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-btc
        | BitHub
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined)
          a(href='/') Home
        li(class=title=='Bounty List'?'active':undefined)
          a(href='/bounty/fetchList') Bounty List
      ul.nav.navbar-nav.navbar-right
        if wallet
          li
            a#addressqr(href="#" data-container="body" data-toggle="popover" data-placement="bottom",
            data-content="<img src='https://blockchain.info/qr?data=#{wallet.address}&size=150'>") Your Wallet: #{wallet.address}
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
        else
          
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/wallet/new') Add a Wallet
              li.divider
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
          li(class=title=='New Bounty'?'active':undefined)
            a(href='/bounty/new') New Bounty

extends ../layout

block content
  .page-header
    h3 All Existing Unsolved Bounties
    
    table.table.table-hover
      thead
        tr 
          th User
          th Issue 
          th Bounty 
          th Solved?
      tbody
      each bounty in bounties
          tr 
            td= bounty._owner.email
            td
              a(href="#{bounty.issueUrl}", target="_blank")= bounty.issueUrl
            td
              | m
              i.fa.fa-btc
              span= bounty.total
            td(class=bounty.solved?'success':'danger')= bounty.solved
  

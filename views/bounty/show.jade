extends ../layout

block content
  .page-header
    h3 All Ye Bounties
    
  table.table.table-hover
    thead
      tr 
        th User
        th Issue 
        th Current Bounty Amount
        th Bounty Address
        th Solved?
    tbody
    each bounty in bounties
      tr 
        td= bounty._owner.email
        td
          a(href="#{bounty.issueUrl}", target="_blank")= bounty.issueUrl
        td
          | m
          i.fa.fa-btc
          span.total
          //- span= bounty.total
        td
          a.tableqr(href="bitcoin:#{bounty.wallet.address}" data-container=".table" data-toggle="popover" data-placement="right",
          data-content="<img src='https://blockchain.info/qr?data=#{bounty.wallet.address}&size=150'>",
          data-trigger="hover focus") #{bounty.wallet.address}
        td(class=bounty.solved?'success':'danger')= bounty.solved
